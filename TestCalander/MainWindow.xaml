<Window x:Class="TestCalander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCalander"
        xmlns:library="clr-namespace:DateTimePickerCustomNet6;assembly=DateTimePickerCustomNet6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <library:PopupDateTimePicker/>
        </Grid> 




        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <library:DatePickerWidget Grid.Column="0"/>
            <library:TimePickerWidget Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock />
        </Grid>
    </Grid>
    
    

    
    
    
</Window>
